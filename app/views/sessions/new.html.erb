<div class="container">
  
  <h1 class="h3 mb-3 font-weight-normal">Iniciar sesión</h1>
  <%= form_tag sessions_path do |form| %>

    <div class="form-group">
      <div class="field">
        <%= label_tag :email %>
        <br>
        <%= text_field_tag :email %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= label_tag "Contraseña" %>
        <br>
        <%= password_field_tag :password %>
      </div>
    </div>

    <div class="actions">
      <%= submit_tag "Login", class: 'btn btn-lg btn-success' %>
    </div>

    <br>

  <% end %>

</div>
